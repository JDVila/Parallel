<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#00FFFFFF"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/fragment_hub_profile_leftanswer"
                android:layout_width="24dp"
                android:layout_height="150dp"
                android:src="@drawable/xbutton"
                android:layout_marginLeft="24dp"
                android:tint="@color/red_transparent"
                android:scaleType="centerInside"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/fragment_hub_profile_leftanswer"
                >

                <ImageView
                    android:id="@+id/fragment_hub_profile_rightanswer"
                    android:layout_width="24dp"
                    android:layout_height="150dp"
                    android:src="@drawable/checkbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:tint="@color/green_transparent"
                    android:scaleType="centerInside"
                    />

                    <TextView
                        android:id="@+id/fragment_hub_profile_textview_question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/fragment_hub_profile_rightanswer"
                        android:gravity="center"
                        android:textColor="#F9f9f9"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        />

            </RelativeLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>