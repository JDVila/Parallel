<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="200dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#BFf9f9f9"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fragment_start_questions_swipestack_question"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Are you an IOS or Android developer?"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                >

                <ImageView
                    android:id="@+id/fragment_start_questions_swipestack_leftarrow"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/glassleftarrow"
                    android:layout_alignParentLeft="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/fragment_start_questions_swipestack_leftarrow"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    >
                    <TextView
                        android:id="@+id/fragment_start_questions_swipestack_leftanswer"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="IOS"
                        />
                </LinearLayout>


                <ImageView
                    android:id="@+id/fragment_start_questions_swipestack_rightarrow"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/glassrightarrow"
                    android:layout_alignParentRight="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/fragment_start_questions_swipestack_rightarrow"
                    android:gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    >
                    <TextView
                        android:id="@+id/fragment_start_questions_swipestack_rightanswer"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:text="Android"
                        />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>