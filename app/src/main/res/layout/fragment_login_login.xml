<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_start_fragment_height"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"></FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_login_edittext_username"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:gravity="center_vertical"
            android:hint="Email Address"
            android:inputType="textWebEmailAddress"
            android:singleLine="true"
            android:textColor="@color/textMain"
            android:typeface="sans" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_login_edittext_password"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/textMain" />
    </android.support.design.widget.TextInputLayout>
    >

    <Button
        android:id="@+id/fragment_login_login_button_login"
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="@dimen/activity_start_edittext_height"
        android:layout_marginBottom="10dp"
        android:background="#40000000"
        android:text="Login"
        android:textColor="@color/textMain"
        android:typeface="sans" />

    <TextView
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textColor="@color/textAlt"
        android:textSize="12sp"
        android:typeface="sans" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.common.SignInButton
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:alpha="0" />

        <ImageView
            android:id="@+id/fragment_login_login_button_googlesignin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_googleplus"
            android:tint="@color/teal" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Don't have an account? "
            android:textColor="@color/textAlt"
            android:typeface="sans" />

        <TextView
            android:id="@+id/fragment_login_login_button_createaccount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Create one"
            android:textColor="@color/teal"
            android:typeface="sans"
            />

    </LinearLayout>


</LinearLayout>