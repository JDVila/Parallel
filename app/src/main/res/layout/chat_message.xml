<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picImageViewLeft"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/picImageViewLeft">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picImageViewRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/picImageViewRight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/picImageViewLeft"
                android:textColor="@color/textAlt"
                android:textSize="@dimen/chat_username_textsize"
                android:textStyle="bold"
                tools:text="Name" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@id/nameTextView"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/picImageViewLeft"
                android:textColor="@color/textMain"
                android:textSize="@dimen/chat_message_textsize"
                tools:text="Message" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
